<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.111">
	<top>
			<Label fx:id="busMenuHeading" />
			<Button fx:id="busLogout" contentDisplay="CENTER" onAction="#busLogoutAction" text="Logout" BorderPane.alignment="CENTER_RIGHT">
         <effect>
            <InnerShadow height="10.0" radius="4.5" width="10.0" />
         </effect></Button>
	</top>
	<center>
		<TabPane fx:id="businessMenuTabPane" tabClosingPolicy="UNAVAILABLE">
			<tabs>
				<Tab fx:id="detailsTab" onSelectionChanged="#onSelectionDetails" text="Details">
					<content>
						<GridPane fx:id="businessDetails" alignment="center" />
					</content>
				</Tab>
				<Tab onSelectionChanged="#onSelectionAddEmployee" text="Add Employee">
					<content>
						<GridPane fx:id="addEmployeeForm" alignment="center" />
					</content>
				</Tab>
				<Tab onSelectionChanged="#onSelectionEmployeeAvailability" text="Employee Availability">
					<content>
						<GridPane fx:id="busEmployeeAvail" alignment="center" />
					</content>
				</Tab>
				<Tab onSelectionChanged="#onSelectionViewBookings" text="View Bookings">
					<content>
						<GridPane fx:id="busViewBooking" />
					</content>
				</Tab>
				<Tab onSelectionChanged="#onSelectionMakeBooking" text="Make Bookings">
					<content>
						<GridPane fx:id="busMakeBooking" />
					</content>
				</Tab>
			</tabs>
		</TabPane>
	</center>
</BorderPane>
