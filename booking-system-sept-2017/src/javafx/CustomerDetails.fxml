<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.Label?>

<GridPane xmlns:fx="http://javafx.com/fxml"
		alignment="center" hgap="10" vgap="10">
			<padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
			
			<!-- <gridLinesVisible>true</gridLinesVisible> -->
			
			<Label text="Customer Details" fx:id="custDetailsLabel"
				GridPane.columnIndex="0" GridPane.rowIndex="0"
				GridPane.columnSpan="2"/>
				
			<Label text="User Name:" fx:id="custDetailsUsernameLabel"
				GridPane.columnIndex="0" GridPane.rowIndex="1"/>
			
			<Text fx:id="custDetailsUsernameData"
				GridPane.columnIndex="1" GridPane.rowIndex="1"/>
			
			<Label text="First Name:" fx:id="custDetailsFirstNameLabel"
				GridPane.columnIndex="0" GridPane.rowIndex="2"/>
			
			<Text fx:id="custDetailsFirstNameData"
				GridPane.columnIndex="1" GridPane.rowIndex="2"/>
			
			<Label text="Last Name:" fx:id="custDetailsLastNameLabel"
				GridPane.columnIndex="0" GridPane.rowIndex="3"/>
			
			<Text fx:id="custDetailsLastNameData"
				GridPane.columnIndex="1" GridPane.rowIndex="3"/>
			
			<Label text="Address:" fx:id="custDetailsAddressLabel"
				GridPane.columnIndex="0" GridPane.rowIndex="4"/>
			
			<Text fx:id="custDetailsAddressData"
				GridPane.columnIndex="1" GridPane.rowIndex="4"/>
			
			<Label text="Phone Number:" fx:id="custDetailsPhoneLabel"
				GridPane.columnIndex="0" GridPane.rowIndex="5"/>
			
			<Text fx:id="custDetailsPhoneData"
				GridPane.columnIndex="1" GridPane.rowIndex="5"/>
</GridPane>

